{
  "name": "Initial consonant search",
  "description": "한글 초성 검색",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at" : "document_idle",
      "css": ["/css/foreground_styles.css"],
      "js": ["/js/content.js"]
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at" : "document_start",
      "js": ["/js/loader.js"]
    }
  ],
  "background": {
    "service_worker": "/js/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts; script-src 'self' 'https://apis.google.com/' 'https://www.googleapis.com' 'https://ajax.googleapis.com'; object-src 'self'"
  },
  "web_accessible_resources": [{
    "resources": [],
    "matches": ["http://*/*", "https://*/*"],
    "extension_ids": []
  }]
}